---
import '../styles/pages/home.css';
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import { getCollection } from 'astro:content';

const portfolioPosts = await getCollection('portfolio');
const sortedPortfolio = portfolioPosts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()).slice(0, 6);
---

<Layout title="Melvin Vivas - AI & Full-Stack Developer">
  <!-- Hero Section -->
  <HeroSection 
    title="I design websites that captivate, convert and elevate your brand."
    showProfile={true}
    showCTA={true}
    ctaText="¡Hablemos!"
    ctaHref="/about"
  />

  <!-- Projects Section -->
  <section class="py-20 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-8">
      <!-- Section Header -->
      <div class="mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          Mis proyectos
        </h2>
        
        <!-- Filter Tags -->
        <div class="flex flex-wrap gap-3 mb-8">
          <button class="filter-btn active px-6 py-2 rounded-full text-sm font-medium bg-white text-gray-900 border border-gray-300">
            All
          </button>
          <button class="filter-btn px-6 py-2 rounded-full text-sm font-medium bg-transparent text-white border border-white/30 hover:bg-white/10 transition-colors" data-category="Product Design UX/UI">
            Product Design UX/UI
          </button>
          <button class="filter-btn px-6 py-2 rounded-full text-sm font-medium bg-transparent text-white border border-white/30 hover:bg-white/10 transition-colors" data-category="Vibe Coding">
            Vibe coding
          </button>
          <button class="filter-btn px-6 py-2 rounded-full text-sm font-medium bg-transparent text-white border border-white/30 hover:bg-white/10 transition-colors" data-category="Consulting">
            Consulting
          </button>
        </div>
      </div>

      <!-- Projects Grid - 2 columns x 3 rows -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
        {
          sortedPortfolio.map((post, index) => {
            const categories = post.data.categories || [];
            return (
            <article class="project-item group" data-categories={JSON.stringify(categories)}>
              <a href={`/portfolio/${post.slug}`} class="block">
                {/* Project Image - Rectangular without borders */}
                {post.data.image && (
                  <div class="relative overflow-hidden rounded-lg mb-6">
                    <img
                      src={post.data.image.src}
                      alt={post.data.image.alt}
                      class="w-full h-64 lg:h-80 object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
                  </div>
                )}
                
                {/* Project Info */}
                <div class="space-y-3">
                  <div class="flex items-center justify-between">
                    <h3 class="text-xl lg:text-2xl font-bold text-gray-900 dark:text-white group-hover:text-accent-light dark:group-hover:text-accent-dark transition-colors">
                      {post.data.title}
                    </h3>
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                      {post.data.publishDate.getFullYear()}
                    </span>
                  </div>
                  
                  <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                    {post.data.description}
                  </p>
                </div>
              </a>
            </article>
          )})
        }
      </div>
    </div>
  </section>

  <!-- Footer Section - Three Columns -->
  <footer class="bg-gray-900 text-white py-16">
    <div class="max-w-7xl mx-auto px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        
        <!-- Left Column - Portfolio -->
        <div>
          <h3 class="text-lg font-semibold mb-6">Portfolio</h3>
          <p class="text-gray-400 mb-6 leading-relaxed">
            Crafting digital experiences with purpose and precision.
          </p>
          <div class="flex gap-4">
            <a href="https://github.com/donvito" class="text-gray-400 hover:text-white transition-colors">
