---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const portfolioPosts = await getCollection('portfolio');
const blogPosts = await getCollection('blog');

const sortedPortfolio = portfolioPosts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()).slice(0, 3);
const sortedBlog = blogPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 2);
---

<Layout title="Melvin Vivas - AI & Full-Stack Developer">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Hero Section -->
    <section class="text-center py-12 lg:py-20">
      <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
        <div class="lg:w-1/3">
          <img
            src="https://avatars.githubusercontent.com/u/890270?v=4"
            alt="Melvin Vivas Profile"
            class="w-48 h-48 lg:w-64 lg:h-64 rounded-full object-cover mx-auto shadow-2xl"
          />
        </div>
        <div class="lg:w-2/3 text-left">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
            Building the Future with 
            <span class="text-accent-light dark:text-accent-dark">AI & Code</span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
            I'm Melvin Vivas (DonvitoCodes), a software engineer and writer focused on leveraging AI for software development and business solutions. I share insights on how AI can transform the way we build software and run businesses.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a
              href="/portfolio"
              class="px-8 py-3 bg-accent-light dark:bg-accent-dark text-white rounded-lg hover:bg-accent-light/90 dark:hover:bg-accent-dark/90 transition-colors font-medium"
            >
              View Portfolio
            </a>
            <a
              href="/blog"
              class="px-8 py-3 border border-accent-light dark:border-accent-dark text-accent-light dark:text-accent-dark rounded-lg hover:bg-accent-light/10 dark:hover:bg-accent-dark/10 transition-colors font-medium"
            >
              Read Blog
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Portfolio -->
    <section class="py-16">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold mb-4">Featured Projects</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Explore some of my latest work in AI-powered applications, full-stack development, and innovative web solutions.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
        {
          sortedPortfolio.map((post) => (
            <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
              <a href={`/portfolio/${post.slug}`} class="block">
                {post.data.image && (
                  <img
                    src={post.data.image.src}
                    alt={post.data.image.alt}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-accent-light/10 dark:bg-accent-dark/10 text-accent-light dark:text-accent-dark">
                      {post.data.industry}
                    </span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">{post.data.country}</span>
                  </div>
                  
                  <h3 class="text-xl font-bold mb-2 hover:text-accent-light dark:hover:text-accent-dark transition-colors">
                    {post.data.title}
                  </h3>
                  
                  <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                    {post.data.description}
                  </p>
                  
                  <div class="flex flex-wrap gap-1 mb-4">
                    {post.data.services.slice(0, 2).map((service) => (
                      <span class="px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                        {service}
                      </span>
                    ))}
                    {post.data.services.length > 2 && (
                      <span class="px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                        +{post.data.services.length - 2}
                      </span>
                    )}
                  </div>
                  
                  <span class="text-accent-light dark:text-accent-dark font-medium">
                    View Project →
                  </span>
                </div>
              </a>
            </article>
          ))
        }
      </div>
      
      <div class="text-center">
        <a
          href="/portfolio"
          class="inline-flex items-center px-6 py-3 bg-accent-light/10 dark:bg-accent-dark/10 text-accent-light dark:text-accent-dark rounded-lg hover:bg-accent-light/20 dark:hover:bg-accent-dark/20 transition-colors"
        >
          View All Projects
          <span class="ml-2">→</span>
        </a>
      </div>
    </section>

    <!-- Latest Blog Posts -->
    <section class="py-16 border-t border-gray-200 dark:border-gray-700">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold mb-4">Latest Insights</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Thoughts and tutorials on AI, web development, and technology trends.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        {
          sortedBlog.map((post) => (
            <article class="flex flex-col md:flex-row gap-4 md:gap-6">
              <div class="md:w-1/3">
                <a href={`/blog/${post.slug}`} class="block hover:opacity-90 transition-opacity">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full aspect-video object-cover rounded-lg"
                  />
                </a>
              </div>
              <div class="md:w-2/3">
                <div class="flex flex-wrap items-center gap-2 text-sm mb-2">
                  <time class="text-gray-600 dark:text-gray-400">{post.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric',
                    month: 'long'
                  })}</time>
                  <span class="text-gray-400">•</span>
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
                <h3 class="text-xl font-bold mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-accent-light dark:hover:text-accent-dark">
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                <a
                  href={`/blog/${post.slug}`}
                  class="text-accent-light dark:text-accent-dark hover:underline inline-flex items-center"
                >
                  Read more <span class="ml-1">→</span>
                </a>
              </div>
            </article>
          ))
        }
      </div>
      
      <div class="text-center">
        <a
          href="/blog"
          class="inline-flex items-center px-6 py-3 bg-accent-light/10 dark:bg-accent-dark/10 text-accent-light dark:text-accent-dark rounded-lg hover:bg-accent-light/20 dark:hover:bg-accent-dark/20 transition-colors"
        >
          View All Posts
          <span class="ml-2">→</span>
        </a>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold mb-4">Let's Connect</h2>
      <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
        I'm very active on X (@donvito) where I share insights about AI and software development. 
        Feel free to reach out and connect with me there!
      </p>
      
      <div class="flex justify-center gap-6 mb-8">
        <a
          href="https://github.com/donvito"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-gray-400 hover:text-accent-light dark:hover:text-accent-dark transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
        </a>
        <a
          href="https://x.com/donvito"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-gray-400 hover:text-accent-light dark:hover:text-accent-dark transition-colors"
          aria-label="Twitter"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/melvinvivas/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-gray-400 hover:text-accent-light dark:hover:text-accent-dark transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="http://aidreamphoto.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="px-6 py-3 bg-accent-light/10 dark:bg-accent-dark/10 text-accent-light dark:text-accent-dark rounded-lg hover:bg-accent-light/20 dark:hover:bg-accent-dark/20 transition-colors"
        >
          🎨 Check out AI Dream Photo
        </a>
        <a 
          href="https://cal.com/donvitocodes" 
          target="_blank" 
          rel="noopener noreferrer"
          class="px-6 py-3 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
        >
          📅 Schedule a consultation
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>