---
import '../styles/components/header.css';

const isHomePage = Astro.url.pathname === '/';
---

<header 
  class="header"
  transition:name="main-header"
>
  <nav class="header-nav">
    <!-- Logo/Brand with Saturn Icon -->
    <a 
      href="/" 
      class="header-logo"
      transition:name="site-logo"
    >
      <!-- Saturn SVG Icon -->
      <svg 
        width="32" 
        height="32" 
        viewBox="0 0 100 100" 
        fill="none" 
        xmlns="http://www.w3.org/2000/svg"
        class="saturn-icon"
      >
        <!-- Saturn Planet -->
        <circle 
          cx="50" 
          cy="50" 
          r="18" 
          fill="currentColor" 
          opacity="0.9"
        />
        
        <!-- Saturn Rings -->
        <ellipse 
          cx="50" 
          cy="50" 
          rx="35" 
          ry="8" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          opacity="0.7"
        />
        <ellipse 
          cx="50" 
          cy="50" 
          rx="28" 
          ry="6" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="1.5" 
          opacity="0.5"
        />
        <ellipse 
          cx="50" 
          cy="50" 
          rx="42" 
          ry="10" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="1" 
          opacity="0.4"
        />
      </svg>
      
      <!-- Optional text for larger screens -->
      <span class="header-brand-text">
        Portfolio
      </span>
    </a>
    
    <!-- Navigation Links -->
    <div 
      class="header-nav-desktop"
      transition:name="main-nav"
    >
      <div class="header-nav-links">
        <a 
          href="/portfolio" 
          class="header-nav-link"
        >
          Work
        </a>
        <a 
          href="/about" 
          class="header-nav-link"
        >
          About
        </a>
        <a 
          href="/about" 
          class="header-nav-link"
        >
          Contact
        </a>
      </div>
    </div>

    <!-- Mobile menu button -->
    <button 
      id="mobileMenuBtn" 
      class="mobile-menu-btn"
    >
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div 
    id="mobileMenu" 
    class="mobile-menu hidden"
  >
    <div class="mobile-menu-content">
      <a 
        href="/portfolio" 
        class="mobile-menu-link"
      >
        Work
      </a>
      <a 
        href="/about" 
        class="mobile-menu-link"
      >
        About
      </a>
      <a 
        href="/about" 
        class="mobile-menu-link"
      >
        Contact
      </a>
    </div>
  </div>
</header>

<script>
  function initializeMobileMenu() {
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');

    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeMobileMenu);
  } else {
    initializeMobileMenu();
  }

  // Re-initialize after view transitions
  document.addEventListener('astro:after-swap', initializeMobileMenu);
</script>