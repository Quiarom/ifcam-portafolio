---
import '../styles/components/header.css';

const isHomePage = Astro.url.pathname === '/';
import { Image } from 'astro:assets';
---

<header 
  class="header"
  transition:name="main-header"
>
  <nav class="header-nav">
    <!-- Logo/Brand with Saturn Icon -->
    <a 
      href="/" 
      class="header-logo"
      transition:name="site-logo"
    >
      <!-- Saturn SVG Icon -->
      <img 
        src="/saturn.svg" 
        alt="Saturn Icon" 
        class="header-logo saturn-icon motion-preset-slide-down motion-delay-[400ms]"
      />
    </a>
    
    <!-- Navigation Links -->
    <div 
      class="header-nav-desktop"
      transition:name="main-nav"
    >
      <div class="header-nav-links motion-preset-rebound-down motion-delay-[450ms]">
        <a 
          href="/portfolio" 
          class="header-nav-link motion-preset-rebound-down motion-delay-[500ms]"
        >
          Work
        </a>
        <a 
          href="/about" 
          class="header-nav-link motion-preset-rebound-down motion-delay-[550ms]"
        >
          About
        </a>
        <a 
          href="/about" 
          class="header-nav-link motion-preset-rebound-down motion-delay-[600ms]"
        >
          Contact
        </a>
      </div>
    </div>

    <!-- Mobile menu button -->
    <button 
      id="mobileMenuBtn" 
      class="mobile-menu-btn"
    >
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div 
    id="mobileMenu" 
    class="mobile-menu hidden"
  >
    <div class="mobile-menu-content">
      <a 
        href="/portfolio" 
        class="mobile-menu-link"
      >
        Work
      </a>
      <a 
        href="/about" 
        class="mobile-menu-link"
      >
        About
      </a>
      <a 
        href="/about" 
        class="mobile-menu-link"
      >
        Contact
      </a>
    </div>
  </div>
</header>